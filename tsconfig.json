{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": ".",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "stripInternal": true,
    "target": "esnext"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/*.js",
    "**/*.d.ts",
    "ignore/**/*"
  ]
}
